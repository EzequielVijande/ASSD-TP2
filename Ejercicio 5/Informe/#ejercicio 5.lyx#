\begin_inset Graphics
	filename ruidoNormal.PNG
	lyxscale 50
	scale 60

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Muestra de ruido uniforme.
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

